{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "noEmit": true,
    "checkJs": false,
    "module": "commonjs",
    "target": "es5",
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "typeRoots": [
      "src/renderer/expanded-theme.ts",
      "node_modules/@types"
    ],
    "resolveJsonModule": true
  },
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  },
  "exclude": [
    "__mocks__", "scripts", "webpack", "worker", "dist", "**/*.stories.js"
  ]
}
