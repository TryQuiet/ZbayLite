{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "target": "es5",
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "typeRoots": [
      "src/renderer/expanded-theme.ts",
      "node_modules/@types"
    ],
    "resolveJsonModule": true
  }
}
